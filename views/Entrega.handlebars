<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="chartjs-size-monitor">
        <div class="chartjs-size-monitor-expand">
            <div class=""></div>
        </div>
        <div class="chartjs-size-monitor-shrink">
            <div class=""></div>
        </div>
    </div>

    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Entrega Medicamento</h1>
    </div>

    <div class="row">

        <div class="col-md-4">
            <div class="mb-3">
                <h5>Paciente</h5>
                <p class="rut" id="rut">{{rut}}</p>
            </div>
            <div class="mb-3">
                <h5>Medicamento</h5>
                <p class="medicamento" id="medicamento">{{medicamento}}</p>
            </div>
            <div class="mb-3">
                <h5>Unidades solicitadas</h5>
                <p class="cantidad" id="cantidad">{{cantidad}}</p>
            </div>
            <div class="mb-3">
                <h5>Duración tratamiento</h5>
                <p class="dias" id="dias">{{dias}} días</p>
            </div>
        </div>

        <!--save form-->
        <div class="col-md-4">
            <form action="entrega" method="POST">
                <div class="mb-3">
                    <label for="paciente" class="form-label">Retirado por</label>
                    <input type="text" class="form-control" value="{{paciente}}" disabled>
                </div>
                <div class="mb-3">
                    <label for="rut" class="form-label">Rut</label>
                    <input type="text" class="form-control" value="{{rut}}" disabled>
                </div>
                <div class="mb-3">
                    <label for="descuento" class="form-label">Unidades entregadas</label>
                    <input type="number" class="form-control" value="{{cantidad}}" disabled>
                </div>
                <div class="mb-3">
                    <input type="hidden" value="'{{medicamento}}'" name="medicamento" id="medicamento">
                    <input type="hidden" value="{{id_prescripcion}}" name="id_prescripcion" id="id_prescripcion">
                    <input type="hidden" value="{{cantidad}}" name="descuento" id="descuento">
                    
                    <div class="text-danger mt-3" role="alert">{{message}}</div>

                    <button type="submit" class="btn btn-md btn-outline-secondary">Guardar</button>
                </div>
            </form>
        </div>
        <!--end save form-->

    </div>
</main>

<script>
    window.history.replaceState({} , '', 'entrega');
</script>