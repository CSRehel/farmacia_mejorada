                window.location.href = `/reserva?id_prescripcion=${id}&id_receta=${id_receta}&rut=${rut}&correo=${correo}&paciente=${paciente}&medicamento=${medicamento}&cantidad=${cantidad}&dias=${dias}&estado=${estado}`;

            }catch({response}){
                const { data } = response;
                const { error } = data;
                alert( error );
            }*/
        }

    }

    const pageUpdate = () => {
        window.location.reload()
    }
</script>