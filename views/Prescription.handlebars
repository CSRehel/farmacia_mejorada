<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

    <div class="chartjs-size-monitor">
        <div class="chartjs-size-monitor-expand">
            <div class=""></div>
        </div>
        <div class="chartjs-size-monitor-shrink">
            <div class=""></div>
        </div>
    </div>

    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Prescripciones pendientes</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="pageUpdate()">Actualizar</button>
            </div>
        </div>
    </div>

    <!--table-->
    <div class="table-responsive">

        <table class="table table-striped table-sm">

            <thead>
                <tr>
                    <th scope="col">Cod. Prescripci√≥n</th>
                    <th scope="col">Rut</th>
                    <th scope="col">Paciente</th>
                    <th scope="col">Medicamento</th>
                    <th scope="col">Total a entregar</th>
                    <th scope="col">Stock disponible</th>
                    <th scope="col">Entrega</th>
                </tr>
            </thead>

            <tbody>

                <!--row-->
                {{#each prescriptions}}
                    {{#state this.state}}
                    <tr>
                        <td>{{this.id_prescription}}</td>
                        <td>{{this.rut}}</td>
                        <td>{{this.patient}}</td>
                        <td>{{this.medicine}}</td>
                        <td>{{this.amount}}</td>
                        <td>{{this.total}}</td>
                        <td><button type="button" class="btn btn-sm btn-outline-secondary"
                        onclick="validateStock(
                            {{this.days}},
                            '{{this.state}}',
                            {{this.id}},
                            {{this.id_prescription}},
                            '{{this.rut}}',
                            '{{this.email}}',
                            '{{this.patient}}',
                            '{{this.medicine}}',
                            {{this.amount}},
                            {{this.total}}
                        )">Ingresar</button></td>
                    </tr>
                    {{/state}}
                {{/each}}
                <!--end row-->
                <input type="hidden" value="{{admin}}" id="admin" name="admin">
            </tbody>

        </table>

    </div>
    <!--end table-->
</main>

<script>
    const validateStock = async (days, state, id, id_prescription, rut, email, patient, medicine, amount, total) => {

        const admin = $('#admin').val();
        const validate = total - amount;
        
        // si validate es mayor a cero, entonces hay stock disponible de medicamento
        if(validate > 0){
            try{
                window.location.href = `/delivery/?admin=${admin}&id=${id}&id_prescription=${id_prescription}&rut=${rut}&patient=${patient}&medicine=${medicine}&amount=${amount}&days=${days}&state=${state}`;

            }catch({response}){
                const { data } = response;
                const { error } = data;
                alert( error );
            }

        }else{
