<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="chartjs-size-monitor">
        <div class="chartjs-size-monitor-expand">
            <div class=""></div>
        </div>
        <div class="chartjs-size-monitor-shrink">
            <div class=""></div>
        </div>
    </div>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Reserva Medicamento</h1>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="mb-3">
                <h5>Paciente</h5>
                <p class="rut" id="rut">{{rut}}</p>
            </div>
            <div class="mb-3">
                <h5>Medicamento</h5>
                <p class="medicine" id="medicine">{{medicine}}</p>
            </div>
            <div class="mb-3">
                <h5>Unidades a reservar</h5>
                <p class="amount" id="amount">{{amount}}</p>
            </div>
            <div class="mb-3">
                <h5>Duración tratamiento</h5>
                <p class="days" id="days">{{days}} días</p>
            </div>
        </div>

        <!--save form-->
        <div class="col-md-4">
            <form action="/reserve/" method="POST">
                <div class="mb-3">
                    <div class="mb-3">
                        <label for="patient" class="form-label">Reserva a nombre de</label>
                        <input type="text" class="form-control" value="{{patient}}" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="email_patient" class="form-label">correo</label>
                        <input type="email" class="form-control" value="{{email_patient}}" disabled>
                    </div>
                    <h5>Notificación stock</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="reserve_option" value="notification" id="notification" checked>
                        <label class="form-check-label" for="notification">Correo</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="reserve_option" value="no_reserve" id="no_reserve">
                        <label class="form-check-label" for="no_reserve">No reserva</label>
                    </div>
                </div>
                <div class="mt-3">

                    <input type="hidden" value="{{amount}}" name="amount" id="amount">
                    <input type="hidden" value="{{id}}" name="id" id="id">
                    <input type="hidden" value="{{email}}" name="email" email="email">

                    <div class="text-danger">{{message}}</div>

                    <button type="submit" class="btn btn-md btn-outline-secondary">Guardar</button>
                </div>
            </form>
        </div>
        <!--end save form-->
    </div>
</main>

